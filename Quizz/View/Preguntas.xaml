<UserControl x:Class="QuizzServer.View.Preguntas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizzServer.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Grid.Row="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>

        </Grid.RowDefinitions>
        <Label Content="¿Ejemplo de pregunta?" HorizontalAlignment="Center" VerticalAlignment="Top" 
               FontSize="25" FontFamily="Stencil Std, fantasy"
               Margin="0,15,0,0" Padding="10" Height="48"></Label>
        <Grid Grid.Row="2">

            <Label Content="1 Respuesta" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" Margin="0,16,0,0" ></Label>
            <Label Content="2 Respuesta"  HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" Margin="0,60,0,0" ></Label>
            <Label Content="3 Respuesta" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" Margin="0,106,0,0"  />
            <Label Content="4 Respuesta" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15" Margin="0,154,0,0"  />

        </Grid>
    </Grid>
</UserControl>
