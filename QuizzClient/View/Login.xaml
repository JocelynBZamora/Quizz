<Window x:Class="QuizzClient.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizzClient.View"
        mc:Ignorable="d"
        Title="Quizz" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://img.freepik.com/fotos-premium/pared-ladrillo_102332-4066.jpg?semt=ais_hybrid"/>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="1" Background="Transparent" Grid.ColumnSpan="3" Margin="260,0,260,0">
                <Label Foreground="Red" FontFamily="Stencil Std, fantasy" FontSize="25" HorizontalAlignment="Center">
                    <Bold>Iniciar quizz</Bold>
                </Label>
                <Separator Background="Black"/>
                <Label FontFamily="Stencil Std, fantasy" Foreground="Black" Margin="5 10">
                    <Bold>
                        <Run Text="Nombre del jugador:"/>
                    </Bold>
                </Label>
                <TextBox x:Name="txtUsuario" Foreground="Black" FontSize="10" Padding="5" FontFamily="Stencil Std, fantasy" Margin="5 10" BorderBrush="Black" BorderThickness="0.5 0 0.5 1" Background="Transparent" TextChanged="txtUsuario_TextChanged"/>
                <Button x:Name="btnEntrar" Background="#7F545D6A" Foreground="Black" FontFamily="Stencil Std, fantasy" Content="Iniciar" HorizontalAlignment="Center" Width="100" Margin="50" Click="btnEntrar_Click" />
            </StackPanel>
        </Grid>
    </Grid>

</Window>
