<Window x:Class="QuizzClient.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizzClient.View"
        mc:Ignorable="d"
        Title="Quizz" Height="450" Width="800">
    <DockPanel Background="#5A72A0">
        
        <StackPanel Margin="200 60 200 60" Background="#FDFFE2" >
            <Label Foreground="Black" FontFamily="Stencil Std, fantasy" FontSize="25" HorizontalAlignment="Center" >
                <Bold>Iniciar quizz</Bold>
            </Label>
            <Separator Background="Black"></Separator>
            <Label Foreground="Black" Margin="5">
                <Bold>Nombre del jugador:</Bold>
            </Label>
            <TextBox Name="txtUsuario" Margin="5" Foreground="Black" FontSize="10" Padding="5"></TextBox>
            <Button Name="btnEntrar" Margin="60 10" Background="#545d6a" Foreground="Black" Height="20" >Iniciar</Button>
        </StackPanel>
    </DockPanel>
</Window>
